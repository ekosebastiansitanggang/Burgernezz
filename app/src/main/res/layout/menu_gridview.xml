<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/img_menu"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/text_kebab"
        android:scaleType="fitCenter"
        android:src="@drawable/kebab"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/text_kebab"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/img_menu"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/price_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/price_kebab"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/text_menu"
        android:layout_alignParentStart="true"/>

</RelativeLayout>